{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es5",
      "es6"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "commonjs",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "~@Main/*": ["src/main/*"],
      "~@Routes/*": ["src/routes/*"],
      "~@Validate/*": [ "src/validate/*"],
      "~@Types/*": ["src/types/*"],
      "~@Entity/*": [ "src/entity/*" ],
      "~@Services/*": ["src/services/*"],
      "~@Controller/*": ["src/controller/*"],
    },
    "sourceMap": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  }
}